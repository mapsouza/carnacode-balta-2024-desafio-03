<div>
    <InputText class="input-text" type="text" placeholder="@PlaceHolder"  @bind-Value="@Value"/>
</div>

@code {
    [Parameter] public string PlaceHolder { get; set; } = "help!";
    
    private string _value1;

    [Parameter]
    public string Value
    {
        get => _value1;
        set
        {
            if (_value1 != value)
            {
                _value1 = value;
                ValueChanged.InvokeAsync(value);
                
            }
            
        }
    }

    [Parameter]
    public EventCallback<string> ValueChanged { get; set; } 


}